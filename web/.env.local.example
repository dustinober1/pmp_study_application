# Firebase Configuration
# Copy this file to .env.local and fill in your Firebase project credentials
# Get these from Firebase Console > Project Settings > Your Apps > Web

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Optional: Firebase Emulator Configuration
# Uncomment to use Firebase emulators for local development
# NEXT_PUBLIC_FIREBASE_USE_EMULATOR=true
# NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
# NEXT_PUBLIC_FIRESTORE_EMULATOR_HOST=localhost:8080
