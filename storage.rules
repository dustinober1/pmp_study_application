rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper function to validate image files
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB limit
          && request.resource.contentType.matches('image/.*');
    }

    // Helper function to validate file size
    function isValidFileSize(maxSize) {
      return request.resource.size < maxSize;
    }

    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) && isValidImage();
      allow delete: if isOwner(userId);
    }

    // User study materials (future use)
    match /users/{userId}/materials/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && isValidFileSize(10 * 1024 * 1024); // 10MB limit
      allow delete: if isOwner(userId);
    }

    // Shared study resources (admin-uploaded content)
    match /shared/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if false; // Only via Firebase Console or admin SDK
    }

    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
